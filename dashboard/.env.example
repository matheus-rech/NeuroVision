# ARIA - Surgical Command Center Environment Configuration
# =========================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env
#
# IMPORTANT: Never commit .env to version control!

# =========================================================
# Required API Keys
# =========================================================

# Anthropic Claude API Key (Required)
# Get your key at: https://console.anthropic.com/
# Used for AI-powered surgical scene analysis
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# =========================================================
# Optional API Keys
# =========================================================

# ElevenLabs API Key (Optional)
# Get your key at: https://elevenlabs.io/
# Provides premium AI voice synthesis for ARIA
# If not set, system uses pyttsx3 local TTS as fallback
ELEVENLABS_API_KEY=your-elevenlabs-api-key-here

# ElevenLabs Voice ID (Optional)
# Default: 21m00Tcm4TlvDq8ikWAM (Rachel - professional female voice)
# Browse voices at: https://elevenlabs.io/voice-library
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# =========================================================
# Camera Configuration
# =========================================================

# Camera Source
# Options:
#   0, 1, 2...        - USB webcam index
#   rtsp://...        - IP camera RTSP stream
#   /path/to/video    - Video file path
#   /path/to/image    - Static image for testing
CAMERA_SOURCE=0

# Camera Resolution (Optional)
# Format: WIDTHxHEIGHT
CAMERA_RESOLUTION=1280x720

# Camera FPS (Optional)
# Capture rate - analysis runs at 2 FPS regardless
CAMERA_FPS=30

# =========================================================
# Voice System Configuration
# =========================================================

# Enable/disable voice alerts
# Set to 'false' for silent operation
VOICE_ENABLED=true

# Voice volume (0.0 to 1.0)
VOICE_VOLUME=0.8

# Voice speed multiplier
# 1.0 = normal, 0.8 = slower, 1.2 = faster
VOICE_SPEED=1.0

# Minimum seconds between repeated alerts
ALERT_THROTTLE_SECONDS=5

# =========================================================
# Server Configuration
# =========================================================

# Backend server host and port
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# Frontend development server port
FRONTEND_PORT=5173

# CORS allowed origins (comma-separated)
# Use '*' for development, specific origins for production
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# =========================================================
# Analysis Configuration
# =========================================================

# Claude Vision analysis frequency (requests per second)
# Maximum 2 due to API rate limits
ANALYSIS_FPS=2

# Analysis mode
# Options: OR_SAFETY, NAVIGATION, TRAINING, SEGMENTATION, INSTRUMENT, FULL
DEFAULT_ANALYSIS_MODE=FULL

# Safety alert threshold (0-100)
# Alerts triggered when safety score drops below this
SAFETY_ALERT_THRESHOLD=80

# =========================================================
# Debug Configuration
# =========================================================

# Enable debug mode
# Shows additional logging and development features
DEBUG_MODE=false

# Log level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Save analysis frames to disk for debugging
SAVE_DEBUG_FRAMES=false
DEBUG_FRAMES_DIR=/tmp/aria_debug

# =========================================================
# 3D Visualization
# =========================================================

# Enable 3D brain model
ENABLE_3D_MODEL=true

# 3D model quality
# Options: low, medium, high
MODEL_QUALITY=medium

# Show trajectory in 3D view
SHOW_TRAJECTORY=true

# =========================================================
# Database Configuration (Future)
# =========================================================

# Database URL for session logging
# DATABASE_URL=sqlite:///./aria_sessions.db

# =========================================================
# Notes
# =========================================================
#
# Performance Tips:
# - Lower CAMERA_RESOLUTION for better performance on older hardware
# - Set ANALYSIS_FPS=1 to reduce API costs and improve responsiveness
# - Disable 3D model (ENABLE_3D_MODEL=false) on low-power devices
#
# Security:
# - Keep this file secure - it contains API keys
# - Use environment-specific .env files for production
# - Consider using a secrets manager for production deployments
#
# Troubleshooting:
# - If voice doesn't work, check ELEVENLABS_API_KEY or try VOICE_ENABLED=false
# - If camera doesn't connect, verify CAMERA_SOURCE index
# - If analysis is slow, reduce CAMERA_RESOLUTION or ANALYSIS_FPS
